<!doctype html>
<html lang="ja">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Expense</title>
  <link rel="stylesheet" href="/static/style.css?v={{ range(100000, 999999) | random }}" />
  <link rel="manifest" href="/static/manifest.json" />
  <meta name="theme-color" content="#111827">
  <script src="/static/preload.js?v={{ range(100000, 999999) | random }}"></script>
</head>

<body>
  <button id="install-btn" class="btn install" style="display: none;"> {{ icons.get("pwa_install", "📲") }} インストール</button>
  <button id="hamburger-menu-btn" class="small-btn"> {{ icons.get("hamburger_menu", "☰") }} </button>
  <div id="menu-container">
    <form method="get" action="/"><button type="submit" id="home-btn" class="small-btn"> {{ icons.get("home", "🏠") }} ホーム　 </button></form>
    <form method="get" action="/asset_management"><button type="submit" id="asset-management-btn" class="small-btn"> {{ icons.get("asset_management", "📈") }} 資産管理 </button></form>
    <button id="theme-toggle" class="small-btn"> {% if theme == "dark" %} {{ icons.get("light_theme", "☀️") }} {% else %} {{ icons.get("dark_theme", "🌙") }} {% endif %} テーマ　 </button>
  </div>
  <div class="container">
    <h1> {{ icons.get("title", "") }} Asset Management </h1>

    {% if status and msg %}
    <div class="success">
      {{ msg }}
    {% if info %}
      <p><strong> {{ info }} </strong></p>
    {% endif %}
    </div>
    {% elif not status and msg %}
    <div class="failed">
      {{ msg }}
    {% if info %}
      <p><strong> {{ info }} </strong></p>
    {% endif %}
    </div>
    {% endif %}

    <div class="card">
      <h3 class="collapsible-trigger" data-key="asset-report">
        <span> {{ icons.get("asset_portfolio", "📊") }} ポートフォリオ </span>
        <span class="collapsible-toggle"></span>
      </h3>
      <div id="asset-report-container" class="collapsible-content">
        <div class="asset-summary-list">
          <div class="asset-summary-content">
            <span> 資産総額 </span>
            <span class="asset-summary-details"> {{today.year}}年{{today.month}}月{{today.day}}日 {{"{:02d}".format(today.hour)}}:{{"{:02d}".format(today.minute)}}時点 </span>
          </div>
          <div class="asset-summary-display"> {{asset_summary.total}} </div>
          <div class="asset-summary-details">
            <span> 前日比 </span>
            <span
              {% if "¥ 0" in asset_summary.change %}
                class=""
              {% elif "+" in asset_summary.change %}
                class="asset-color-up"
              {% else %}
                class="asset-color-down"
              {% endif %}
            > {{asset_summary.change}} </span>
          </div>
          <br>
          <div class="asset-summary-content">
            <span> 為替レート : USD/JPY </span>
            <span class="asset-summary-display-sub"> {{asset_summary.usdjpy}} </span>
          </div>
        </div>
        {% if graph_html %}
          <div class="graph-container">
            <hr>
            {{ graph_html | safe }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="card">
      <h3 class="collapsible-trigger" data-key="asset-record">
        <span> {{ icons.get("asset_list", "📝") }} 資産一覧 </span>
        <span class="collapsible-toggle"></span>
      </h3>
      <a href="{{ gspread_url }}" class="link-spread"> {{ icons.get("link", "🔗") }} スプレッドシートを開く </a>
      <div id="asset-record-container" class="collapsible-content">
        <div class="search-wrapper">
          <input type="text" id="search-input" placeholder="{{ icons.get('search', '🔍') }} 資産をフィルタリング" onkeyup="filterTable()" />
          <button id="clear-search" type="button">✕</button>
        </div>
        <div class="table-container">
          <table>
            <colgroup>
              <col>
              <col>
              <col>
              <col>
              <col>
              <col>
              <col>
              <col>
              <col>
              <col>
            </colgroup>
            <thead>
              <tr>
                <th>銘柄</th>
                <th>保有数</th>
                <th>取得単価(¥)</th>
                <th>現在値($)</th>
                <th>現在値(¥)</th>
                <th>投資額(¥)</th>
                <th>評価額(¥)</th>
                <th>含み益(¥)</th>
                <th>保有比率(%)</th>
                <th>評価損益率(%)</th>
              </tr>
            </thead>
            <tbody>
              {% for item in asset_items %}
              <tr>
                <td>{{ item.ticker }}</td>
                <td>{{ item.num }}</td>
                <td>¥ {{ "{:,.0f}".format(item.acquisition) }}</td>
                <td>$ {{ "{:,}".format(item.price_dollar) }}</td>
                <td>¥ {{ "{:,.0f}".format(item.price) }}</td>
                <td>¥ {{ "{:,.0f}".format(item.invest_amoumt) }}</td>
                <td>¥ {{ "{:,.0f}".format(item.valuation) }}</td>
                <td>¥ {{ "{:,.0f}".format(item.profit) }}</td>
                <td>{{ "{:.2f}".format(item.weight) }}%</td>
                <td>{{ "{:.2f}".format(item.roi) }}%</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
  <div id="loader" class="overlay" style="display: none;">
    <div class="spinner"></div>
  </div>
</body>
<script src="/static/main.js?v={{ range(100000, 999999) | random }}"></script>

</html>
